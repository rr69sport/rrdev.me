---
import ExternalLinkIcon from '../icons/ExternalLinkIcon.astro'
---

<ul>
  <li>
    <a
      href='https://www.linkedin.com/in/rrdevme/'
      target='_blank'
      rel='noopener'>
      LinkedIn
      <ExternalLinkIcon width='32' height='32' />
    </a>
  </li>
  <li>
    <a href='https://github.com/rr69sport' target='_blank' rel='noopener'>
      GitHub
      <ExternalLinkIcon width='32' height='32' />
    </a>
  </li>
</ul>

<style>
  ul {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--gap);
  }
  a {
    display: flex;
    align-items: center;
    padding: calc(var(--gap) / 2) var(--gap);
    font-weight: var(--font-bold);
    font-size: var(--font-size-lg);
    color: inherit;
    text-decoration: underline;
    background-color: var(--background-color);
    border-radius: var(--border-radius);
  }
  a:hover {
    color: var(--main-color);
  }

  @media screen and (min-width: 850px) {
    ul {
      position: absolute;
      bottom: var(--gap);
      right: var(--gap);
    }
  }
</style>
